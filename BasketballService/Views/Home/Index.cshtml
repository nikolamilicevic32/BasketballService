section Scripts{
    @Scripts.Render("~/Scripts/Skripta.js")}

<div class="row">
    <div style="margin:20px 20px 20px 20px"> 
        <p id="registracijaIprijava">Korisnik nije prijavljen na sistem!<button style="margin-left:30px" id="pocetnoDugme">Registracija i prijava</button></p>
    </div>
    <div id="prijavaDiv" style="display:none">
        <form method="post" action="post/" id="prijava">
            <h2>Prijava</h2>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" id="priEmail" />
            </div>
            <div class="form-group">
                <label>Lozinka</label>
                <input class="form-control" type="password" id="priLoz" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Prijava</button>
            </div>
        </form>
        <button id="registracijaDugme" class="btn btn-default">Registracija</button>
    </div>
    <div>
        <div class="col-sm-4" id="registracijaDiv">
            <form method="post" action="post/" id="registracija" style="display:none">
                <h3>Registracija</h3>
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="text" id="regEmail" />
                </div>
                <div class="form-group">
                    <label>Lozinka</label>
                    <input class="form-control" type="password" id="regLoz" />
                </div>
                <div class="form-group">
                    <label>Potvrdi Lozinku</label>
                    <input class="form-control" type="password" id="regLoz2" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Registruj se</button>
                </div>
            </form>
        </div>
        <br />
        <div class="col-sm-4" style="display:none" id="odjava">
            <button class="btn btn-default" id="odjavise">Odjava</button>
        </div>
    </div>
</div>
<div class="row">
    <p id="info"></p>
    <br />
    <div id="dataKosarkasi" style="display:none">
    </div>
    <br />
    <div class="row">
        <form action="post/" method="post" id="pretragaForm" style="display:none">
            <h2>Pretraga Kosarkasa po broju utakmica</h2>
            <p><label style="margin: auto 10px">Start:<input type="number" min="1"  id="pretragaStart" /></label><label style="margin: auto 10px">Kraj:<input type="number" min="1"  id="pretragaKraj" /></label><button type="submit">Pretraga</button></p>
        </form>
        <button style="display:none" class="btn btn-default" id="resetujPretragu">Resetuj pretragu</button>
    </div>
    <br />
    <div id="formKosarkasiDiv" style="display:none">
        <form method="post" action="post/" id="kosarkasiForm">
            <h2>Dodavanje novog Kosarkasa</h2>
            <p><label>Ime i prezime: <input id="kosarkasIme"></label></p>
            <br />
            <p><label>Godina rodjenja: <input type="number" min="1976" max="1999" id="kosarkasGodina"></label></p>
            <br />
            <p><label>Broj utakmica: <input type="number" min="1" id="kosarkasUtakmice"></label></p>
            <br />
            <p><label>Klub:<select name="" id="kosarkasKlub"></select></label></p>
            <br />
            <p><label>Prosecno poena: <input type="number" step="0.1" min="0.1" id="kosarkasPoeni"></label></p>
            <br />
            <p><button>Submit</button></p>
        </form>
        <button id="odustajanje">Odustajanje</button>
    </div>
</div>